{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "SICO MIX",
  "short_name": "SICO MIX",
  "description": "Професійна система управління рецептами фарб для створення, зберігання та аналізу кольорових рішень",
  "start_url": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "background_color": "#f8f9fa",
  "theme_color": "#4361ee",
  "orientation": "any",
  "lang": "uk",
  "dir": "ltr",
  "id": "/?source=pwa",
  "categories": ["business", "productivity", "utilities"],
  "scope": "./",
  "iarc_rating_id": "e84b072d-719b-453e-b4b5-8c6945b3375a",
  
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "screenshots/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Головна сторінка SICO MIX"
    },
    {
      "src": "screenshots/screenshot-desktop-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Створення нового рецепту"
    },
    {
      "src": "screenshots/screenshot-mobile-1.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Мобільний вигляд головної сторінки"
    },
    {
      "src": "screenshots/screenshot-mobile-2.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Каталог фарб на мобільному"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Новий рецепт",
      "short_name": "Новий",
      "description": "Створити новий рецепт фарби",
      "url": "./#new-recipe",
      "icons": [
        {
          "src": "icons/shortcut-new.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Мої рецепти",
      "short_name": "Рецепти",
      "description": "Переглянути всі мої рецепти",
      "url": "./#recipes",
      "icons": [
        {
          "src": "icons/shortcut-recipes.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Каталог фарб",
      "short_name": "Каталог",
      "description": "Переглянути каталог доступних фарб",
      "url": "./#catalog",
      "icons": [
        {
          "src": "icons/shortcut-catalog.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Імпорт даних",
      "short_name": "Імпорт",
      "description": "Імпортувати рецепти з файлу",
      "url": "./#import",
      "icons": [
        {
          "src": "icons/shortcut-import.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.sico.mix",
      "id": "com.sico.mix"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/sico-mix/id1234567890"
    },
    {
      "platform": "windows",
      "url": "ms-windows-store://pdp/?productid=9NBLGGH12345"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+sico",
      "url": "./?protocol=%s"
    }
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 360
  },
  
  "file_handlers": [
    {
      "action": "./?import=file",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      },
      "name": "Файли даних SICO MIX"
    }
  ],
  
  "share_target": {
    "action": "./?share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "recipe",
          "accept": ["application/json", "text/csv", "image/*"]
        }
      ]
    }
  },
  
  "capture_links": "existing-client-navigate",
  
  "permissions": [
    "clipboard-write",
    "clipboard-read",
    "notifications",
    "storage",
    "geolocation"
  ],
  
  "serviceworker": {
    "src": "./js/service-worker.js",
    "scope": "./",
    "use_cache": true
  },
  
  "features": [
    "cross-origin-isolated",
    "geolocation",
    "hid",
    "idle-detection",
    "payment",
    "storage-access",
    "sync-filesystem",
    "top-navigation"
  ],
  
  "version": "2.2.0",
  "author": "SICO MIX Team",
  "homepage_url": "https://sico-mix.example.com",
  
  "developer": {
    "name": "SICO Україна",
    "url": "https://sico.com.ua"
  },
  
  "platforms": ["web", "android", "ios", "windows"],
  
  "output": "standalone",
  
  "generated": true,
  
  "splash_pages": null,
  
  "related_apps": [
    {
      "platform": "webapp",
      "url": "https://sico-mix.example.com/manifest.json"
    }
  ],
  
  "monetization": {
    "payment_pointer": "$ilp.uphold.com/XXXXXX",
    "supported_protocols": ["interledger"]
  },
  
  "background": {
    "scripts": ["./js/background.js"]
  },
  
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  
  "update_url": "https://sico-mix.example.com/updates.xml",
  
  "external": {
    "connectors": [
      {
        "platform": "github",
        "url": "https://github.com/sico-mix/app"
      }
    ]
  },
  
  "format_detection": ["telephone=no", "date=no", "address=no", "email=no"]
}
